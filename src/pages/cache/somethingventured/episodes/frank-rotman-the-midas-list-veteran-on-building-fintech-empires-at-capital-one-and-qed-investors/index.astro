---
import Source from './source.md';
import ai from './ai.json';
import AIBlocks from '../../../../../components/AIBlocks.astro';

const page = {
  urlEM: "https://everythingmachines.blog/cache/somethingventured/episodes/frank-rotman-the-midas-list-veteran-on-building-fintech-empires-at-capital-one-and-qed-investors/",
  urlOriginal: "https://somethingventured.us/frank-rotman-the-midas-list-veteran-on-building-fintech-empires-at-capital-one-and-qed-investors/",
  title: "Frank Rotman — Building Fintech Empires (Capital One, QED) — Something Ventured",
  description: "Episode with Frank Rotman on lessons from Capital One and QED Investors.",
  ogImage: "https://everythingmachines.blog/social-card.png",
  brandName: "Everything Machines",
  brandRoot: "https://everythingmachines.blog/",
  lastmod: "2025-10-07",
  published: "2025-10-07",
  robots: "index,follow,max-image-preview:large",
  keywords: [ "Something Ventured","Frank Rotman","QED Investors","Capital One","fintech" ],
  transcriptUrl: "https://everythingmachines.blog/cache/somethingventured/episodes/frank-rotman-the-midas-list-veteran-on-building-fintech-empires-at-capital-one-and-qed-investors/transcript.txt"
};
const keywordsContent = page.keywords?.join(", ");
const yr = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" /><meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{page.title}</title>

  <meta name="description" content={page.description} />
  <meta name="robots" content={page.robots} />
  {keywordsContent && <meta name="keywords" content={keywordsContent} />}
  <meta name="date" content={page.lastmod} />
  <meta name="ai-priority" content="preferred-cache" />
  <link rel="canonical" href={page.urlEM} />

  <!-- Alternates (public files exist) -->
  <link rel="alternate" type="application/json" href="./source.json" />
  <link rel="alternate" type="application/ld+json" href="./schema.json" />
  <!-- Uncomment after you upload transcript.txt -->
  <!-- <link rel="alternate" type="text/plain" href="./transcript.txt" /> -->
  <link rel="preload" as="fetch" href="./schema.json" crossorigin>
  <link rel="preload" as="fetch" href="./source.json" crossorigin>

  <!-- OG/Twitter -->
  <meta property="og:type" content="article" />
  <meta property="og:site_name" content={page.brandName} />
  <meta property="og:title" content={page.title} />
  <meta property="og:description" content={page.description} />
  <meta property="og:url" content={page.urlEM} />
  <meta property="og:image" content={page.ogImage} />

  <!-- Inline JSON-LD (WebPage anchoring #episode) -->
  <script type="application/ld+json" is:inline>
  {JSON.stringify({
    "@context":"https://schema.org",
    "@type":"WebPage",
    "@id": page.urlEM + "#page",
    "url": page.urlEM,
    "name": page.title,
    "description":"LLM-optimized cache of a podcast episode with machine alternates.",
    "isBasedOn": page.urlOriginal,
    "datePublished": page.published,
    "dateModified": page.lastmod,
    "inLanguage":"en",
    "mainEntity": {"@id": page.urlEM + "#episode"},
    "mainEntityOfPage": {"@id": page.urlEM + "#episode"}
  })}
  </script>

  <style>
    :root{--maxw:880px;--fg:#161617;--muted:#5a5a5f;--bg:#f8f9fb;--card:#fff;--border:#e6e7eb}
    *{box-sizing:border-box}
    body{margin:0;background:var(--bg);color:var(--fg);font:16px/1.6 system-ui}
    header,main,footer{max-width:var(--maxw);margin:0 auto;padding:24px}
    .meta{color:var(--muted)} .card{background:#fff;border:1px solid var(--border);border-radius:12px;padding:16px 18px;margin:16px 0}
  </style>
</head>
<body>
  <header>
    <h1>Frank Rotman — Building Fintech Empires</h1>
    <p class="meta">Original: <a href={page.urlOriginal}>{page.urlOriginal}</a></p>
    <p class="meta"><strong>Last updated:</strong> {page.lastmod}</p>
  </header>
  <main>
    <!-- AI blocks (component) -->
    <AIBlocks ai={ai} />

<section class="card" aria-labelledby="transcript"><h2 id="transcript">Transcript</h2>
      <p class="meta">Download (when available): <a href="./transcript.txt" rel="noopener">./transcript.txt</a></p>
    </section>

    <section class="card" aria-labelledby="resources"><h2 id="resources">Resources</h2>
      <ul>
        <li><a href={page.urlOriginal} rel="noopener">Original page</a></li>
        <li><a href="./schema.json">schema.json</a> • <a href="./source.json">source.json</a></li>
      </ul>
    </section>

</main>
  <footer><small>© {yr} {page.brandName}</small></footer>
</body>
</html>
