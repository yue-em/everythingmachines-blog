---
/* Build-time values */
const yr = new Date().getFullYear();

/* Section data (expand as you add tools) */
const section = {
  brand: "barndoor",
  name: "AI Tools",
  url: "https://everythingmachines.blog/cache/barndoor/ai-tools/",
  lastmod: "2025-10-01",
  items: [
    {
      name: "Clay",
      summary: "Enrichment and outreach workflows",
      url: "/cache/barndoor/ai-tools/clay/",
      absUrl: "https://everythingmachines.blog/cache/barndoor/ai-tools/clay/"
    }
  ]
};
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <title>{section.name} · Barndoor Cache</title>
  <meta name="description" content="Everything Machines cache index for Barndoor AI Tools with LLM-friendly structure and internal links." />
  <meta name="robots" content="index,follow" />
  <link rel="canonical" href={section.url} />

  <!-- Open Graph -->
  <meta property="og:type" content="website" />
  <meta property="og:title" content={`${section.name} · Barndoor Cache`} />
  <meta property="og:description" content="Everything Machines cache index for Barndoor AI Tools with LLM-friendly structure and internal links." />
  <meta property="og:url" content={section.url} />

  <!-- JSON-LD: WebPage -->
  <script type="application/ld+json" is:inline>
  {JSON.stringify({
    "@context":"https://schema.org",
    "@type":"WebPage",
    "@id":"#page",
    "name": `${section.name} · Barndoor Cache`,
    "url": section.url,
    "description":"Everything Machines cache index for Barndoor AI Tools.",
    "isPartOf":{"@type":"WebSite","name":"Everything Machines","url":"https://everythingmachines.blog/"},
    "dateModified": section.lastmod,
    "inLanguage":"en",
    "primaryImageOfPage":"https://everythingmachines.blog/social-card.png",
    "mainEntity":{"@id":"#list"},
    "about":[{"@id":"#list"}]
  })}
  </script>

  <!-- JSON-LD: ItemList of tools -->
  <script type="application/ld+json" is:inline>
  {JSON.stringify({
    "@context":"https://schema.org",
    "@type":"ItemList",
    "@id":"#list",
    "name": "Barndoor AI Tools (Cache Index)",
    "itemListOrder":"http://schema.org/ItemListOrderAscending",
    "dateModified": section.lastmod,
    "itemListElement": section.items.map((it, idx) => ({
      "@type":"ListItem",
      "position": idx + 1,
      "name": it.name,
      "url": it.absUrl
    }))
  })}
  </script>

  <style>
    :root { --maxw: 880px; --fg:#161617; --muted:#5a5a5f; }
    * { box-sizing: border-box; }
    body { margin:0; font:16px/1.6 system-ui,-apple-system,Segoe UI,Roboto,sans-serif; color:var(--fg); }
    header, main, footer { max-width:var(--maxw); margin:0 auto; padding:24px; }
    .meta { color:var(--muted); }
    a { color:#0b65c2; text-decoration:none; }
    a:hover { text-decoration:underline; }
    ul { padding-left: 18px; }
  </style>
</head>
<body>
  <header>
    <h1>{section.name} · Barndoor Cache</h1>
    <p class="meta">LLM-friendly cache index on Everything Machines. Canonical points to this section for machine discovery.</p>
    <p class="meta"><strong>Last updated:</strong> {section.lastmod}</p>
  </header>

  <main>
    <section aria-label="Tools">
      <h2>Featured</h2>
      <ul>
        {section.items.map(it => (
          <li>
            <strong>{it.name}</strong> · {it.summary}
            · <a href={it.url}>View cached page</a>
          </li>
        ))}
      </ul>
    </section>
  </main>

  <footer>
    <small>© {yr} Everything Machines · Cache section</small>
  </footer>
</body>
</html>
