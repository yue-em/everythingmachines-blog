---
/* Injected from your _page.yml and/or kept in sync manually */
const page = {
  url: "https://barndoor.ai/ai-tools/clay/",
  title: "Clay – AI App Profile | Features, Specialization, Pros & Cons | Barndoor AI",
  description:
    "Discover Clay's AI application. Get detailed information about features, specializations, reviews, and how this AI tool can benefit your business.",
  ogImage: "https://barndoor.ai/wp-content/uploads/2024/11/barndoor-logoart_coloroptions_pdf.png",
  brandName: "Barndoor.ai",
  brandRoot: "https://barndoor.ai/",
  lastmod: "2025-10-01",
  robots: "index,follow,max-image-preview:large",
  keywords: ["Clay AI","AI data orchestration","sales automation","marketing automation","lead scoring","data enrichment","prospect research"],
  company: {
    founded: "2017-07-25",
    totalFinancing: "$102M",
    valuation: "$3.1B (Series C)",
    website: "https://www.clay.com/"
  }
};
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <title>{page.title}</title>
  <meta name="description" content={page.description} />
  <meta name="robots" content={page.robots} />
  {page.keywords?.length && <meta name="keywords" content={page.keywords.join(", ")} />}

  <!-- Canonical points to the original (your chosen strategy) -->
  <link rel="canonical" href={page.url} />

  <!-- Alternates for machines -->
  <link rel="alternate" type="text/markdown" href="./source.md" />
  <link rel="sitemap" type="application/xml" href="/sitemap.xml" />
  <link rel="llms" href="/llms.txt" />

  <!-- Open Graph / Twitter -->
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content={page.brandName} />
  <meta property="og:title" content={page.title} />
  <meta property="og:description" content={page.description} />
  <meta property="og:url" content={page.url} />
  <meta property="og:image" content={page.ogImage} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={page.title} />
  <meta name="twitter:description" content={page.description} />
  <meta name="twitter:image" content={page.ogImage} />

  <!-- JSON-LD: WebPage -->
  <script type="application/ld+json" is:inline>
  {
    "@context":"https://schema.org",
    "@type":"WebPage",
    "name":"{page.title}",
    "url":"{page.url}",
    "description":"{page.description}",
    "isPartOf":{"@type":"WebSite","name":"{page.brandName}","url":"{page.brandRoot}"},
    "primaryImageOfPage":"{page.ogImage}",
    "dateModified":"{page.lastmod}",
    "inLanguage":"en",
    "keywords":"{page.keywords && page.keywords.join(', ')}"
  }
  </script>

  <!-- JSON-LD: Breadcrumbs -->
  <script type="application/ld+json" is:inline>
  {
    "@context":"https://schema.org",
    "@type":"BreadcrumbList",
    "itemListElement":[
      {"@type":"ListItem","position":1,"name":"Home","item":"{page.brandRoot}"},
      {"@type":"ListItem","position":2,"name":"AI Tools","item":"https://barndoor.ai/ai-tools/"},
      {"@type":"ListItem","position":3,"name":"Clay","item":"{page.url}"}
    ]
  }
  </script>

  <style>
    :root { --maxw: 880px; --fg:#161617; --muted:#5a5a5f; --bg:#f8f9fb; --card:#ffffff; --border:#e6e7eb; }
    * { box-sizing: border-box; }
    body { margin:0; background:var(--bg); color:var(--fg); font:16px/1.6 system-ui,-apple-system,Segoe UI,Roboto,sans-serif; }
    header, main, footer { max-width:var(--maxw); margin:0 auto; padding:24px; }
    .meta { color:var(--muted); }
    a { color:#0b65c2; text-decoration:none; }
    a:hover { text-decoration:underline; }
    .card { background:var(--card); border:1px solid var(--border); border-radius:12px; padding:16px 18px; margin:16px 0; }
    .grid { display:grid; gap:16px; }
    @media (min-width: 768px) { .grid-2 { grid-template-columns: 1fr 1fr; } }
    table { border-collapse:collapse; width:100%; margin:1em 0; }
    th, td { border:1px solid var(--border); padding:8px; text-align:left; }
    .pill { display:inline-block; padding:4px 10px; border-radius:999px; background:#eef5ff; color:#0b65c2; font-weight:600; font-size:12px; }
  </style>
</head>
<body>
  <header>
    <h1>Clay</h1>
    <p class="meta">Cached copy of <a href={page.url}>{page.url}</a> for LLM-friendly indexing.</p>
    <p class="meta"><strong>Last updated:</strong> {page.lastmod}</p>
  </header>

  <main>
    <section class="card">
      <div class="grid grid-2">
        <div>
          <h2 class="meta" style="text-transform:uppercase; letter-spacing:.06em;">Overview</h2>
          <p>{page.description}</p>
        </div>
        <div>
          <span class="pill">Startup</span>
          <ul class="meta" style="margin:12px 0 0 0; padding:0; list-style:none;">
            <li><strong>Founded:</strong> {page.company.founded}</li>
            <li><strong>Total Financing:</strong> {page.company.totalFinancing}</li>
            <li><strong>Valuation:</strong> {page.company.valuation}</li>
            <li><strong>Website:</strong> <a href={page.company.website}>clay.com</a></li>
          </ul>
        </div>
      </div>
    </section>

    <!-- If you want the full body, paste rendered HTML from source.md below -->
    <!-- {{ rendered_body_html }} -->
  </main>

  <footer>
    <small>© {new Date().getFullYear()} {page.brandName} · Cached on everythingmachines.blog</small>
  </footer>
</body>
</html>
