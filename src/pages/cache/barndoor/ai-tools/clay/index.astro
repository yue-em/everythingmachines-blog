---
import Source from './source.md';

/* Keep this in sync with _page.yml (manual for now) */
const page = {
  url: "https://barndoor.ai/ai-tools/clay/",
  title: "Clay – AI App Profile | Features, Specialization, Pros & Cons | Barndoor AI",
  description: "Discover Clay's AI application. Get detailed information about features, specializations, reviews, and how this AI tool can benefit your business.",
  ogImage: "https://barndoor.ai/wp-content/uploads/2024/11/barndoor-logoart_coloroptions_pdf.png",
  brandName: "Barndoor.ai",
  brandRoot: "https://barndoor.ai/",
  lastmod: "2025-10-01",
  robots: "index,follow,max-image-preview:large",
  keywords: ["Clay AI","AI data orchestration","sales automation","marketing automation","lead scoring","data enrichment","prospect research"],
  company: {
    name: "Clay",
    website: "https://www.clay.com/",
    founded: "2017-07-25",
    totalFinancing: "$102M",
    valuation: "$3.1B (Series C)"
  }
};

/* Build derived strings */
const keywordsContent = page.keywords?.join(", ");

/* JSON-LD objects (stringified below to avoid template parsing issues) */
const webPageLd = {
  "@context":"https://schema.org",
  "@type":"WebPage",
  name: page.title,
  url: page.url,
  description: page.description,
  isPartOf: { "@type":"WebSite", name: page.brandName, url: page.brandRoot },
  primaryImageOfPage: page.ogImage,
  dateModified: page.lastmod,
  inLanguage: "en",
  ...(keywordsContent ? { keywords: keywordsContent } : {})
};

const breadcrumbLd = {
  "@context":"https://schema.org",
  "@type":"BreadcrumbList",
  itemListElement: [
    { "@type":"ListItem", position:1, name:"Home", item: page.brandRoot },
    { "@type":"ListItem", position:2, name:"AI Tools", item:"https://barndoor.ai/ai-tools/" },
    { "@type":"ListItem", position:3, name:"Clay", item: page.url }
  ]
};

/* SoftwareApplication schema (product-style) */
const softwareApplicationLd = {
  "@context":"https://schema.org",
  "@type":"SoftwareApplication",
  name: "Clay",
  applicationCategory: "BusinessApplication",
  operatingSystem: "Web",
  url: page.url,
  description: page.description,
  brand: { "@type":"Organization", "name":"Clay", "url": page.company.website },
  publisher: { "@type":"Organization", "name": page.brandName, "url": page.brandRoot }
  // Add offers/price/aggregateRating later if you have them
};

/* Simple FAQ (expand later or source from _page.yml) */
const faqLd = {
  "@context":"https://schema.org",
  "@type":"FAQPage",
  mainEntity: [
    {
      "@type":"Question",
      name:"What is Clay?",
      acceptedAnswer:{ "@type":"Answer", text:"Clay is an AI-powered data orchestration platform for sales and marketing automation, consolidating 130+ data sources for research, enrichment, and outreach workflows." }
    },
    {
      "@type":"Question",
      name:"Who uses Clay?",
      acceptedAnswer:{ "@type":"Answer", text:"Sales and marketing teams seeking to automate prospect research, enrichment, and personalized outreach at scale." }
    }
  ]
};

const yr = new Date().getFullYear();
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <title>{page.title}</title>
  <meta name="description" content={page.description} />
  <meta name="robots" content={page.robots} />
  {keywordsContent && <meta name="keywords" content={keywordsContent} />}
  <meta property="article:modified_time" content={page.lastmod} />
  <meta property="og:updated_time" content={page.lastmod} />

  <!-- Canonical always points to the original (your strategy) -->
  <link rel="canonical" href={page.url} />

  <!-- Alternates for crawlers -->
  <link rel="alternate" type="text/markdown" href="./source.md" />
  <link rel="sitemap" type="application/xml" href="/sitemap.xml" />
  <link rel="llms" href="/llms.txt" />

  <!-- Open Graph / Twitter -->
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content={page.brandName} />
  <meta property="og:title" content={page.title} />
  <meta property="og:description" content={page.description} />
  <meta property="og:url" content={page.url} />
  <meta property="og:image" content={page.ogImage} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={page.title} />
  <meta name="twitter:description" content={page.description} />
  <meta name="twitter:image" content={page.ogImage} />

  <!-- JSON-LD (safe stringify) -->
  <script type="application/ld+json" is:inline>{JSON.stringify(webPageLd)}</script>
  <script type="application/ld+json" is:inline>{JSON.stringify(breadcrumbLd)}</script>
  <script type="application/ld+json" is:inline>{JSON.stringify(softwareApplicationLd)}</script>
  <script type="application/ld+json" is:inline>{JSON.stringify(faqLd)}</script>

  <style>
    :root { --maxw: 880px; --fg:#161617; --muted:#5a5a5f; --bg:#f8f9fb; --card:#ffffff; --border:#e6e7eb; }
    * { box-sizing: border-box; }
    body { margin:0; background:var(--bg); color:var(--fg); font:16px/1.6 system-ui,-apple-system,Segoe UI,Roboto,sans-serif; }
    header, main, footer { max-width:var(--maxw); margin:0 auto; padding:24px; }
    .meta { color:var(--muted); }
    a { color:#0b65c2; text-decoration:none; }
    a:hover { text-decoration:underline; }
    .card { background:var(--card); border:1px solid var(--border); border-radius:12px; padding:16px 18px; margin:16px 0; }
    table { border-collapse: collapse; width: 100%; margin: 1em 0; }
    th, td { border: 1px solid var(--border); padding: 8px; text-align: left; }
    /* Basic prose tweaks for Markdown */
    :where(main) h1, h2, h3 { margin: 1.2em 0 .4em; }
    :where(main) p { margin: .6em 0; }
    :where(main) ul { padding-left: 18px; }
  </style>
</head>
<body>
  <header>
    <h1>Clay</h1>
    <p class="meta">Cached copy of <a href={page.url}>{page.url}</a> for LLM-friendly indexing.</p>
    <p class="meta"><strong>Last updated:</strong> {page.lastmod}</p>
  </header>

  <main>
    <!-- Auto-render the full Markdown body -->
    <section class="card">
      <Source />
    </section>
  </main>

  <footer>
    <small>© {yr} {page.brandName} · Cached on everythingmachines.blog</small>
  </footer>
</body>
</html>


