---
import Source from './source.md';

/* We want EM to be the canonical LLM endpoint.
   Keep a reference to the original via isBasedOn + sameAs. */
const page = {
  urlEM: "https://everythingmachines.blog/cache/barndoor/ai-tools/clay/",
  urlOriginal: "https://barndoor.ai/ai-tools/clay/",
  title: "Clay – AI App Profile | Features, Specialization, Pros & Cons | Barndoor AI",
  description: "Discover Clay's AI application. Get detailed information about features, specializations, reviews, and how this AI tool can benefit your business.",
  ogImage: "https://barndoor.ai/wp-content/uploads/2024/11/barndoor-logoart_coloroptions_pdf.png",
  brandName: "Everything Machines",
  brandRoot: "https://everythingmachines.blog/",
  lastmod: "2025-10-01",
  robots: "index,follow,max-image-preview:large",
  keywords: [
    "Clay AI",
    "AI data orchestration",
    "sales automation",
    "marketing automation",
    "lead scoring",
    "data enrichment",
    "prospect research"
  ],
  company: {
    name: "Clay",
    website: "https://www.clay.com/",
    founded: "2017-07-25",
    totalFinancing: "$102M",
    valuation: "$3.1B (Series C)"
  },
  video: {
    name: "Clay Product Overview",
    description: "Demo of Clay’s AI-powered enrichment and outreach workflows.",
    url: "https://www.youtube.com/watch?v=5miLzYgVUNk",
    thumbnailUrl: "https://i.ytimg.com/vi/5miLzYgVUNk/hqdefault.jpg",
    uploadDate: "2025-08-01"
  }
};

const keywordsContent = page.keywords?.join(", ");

const softwareApplicationLd = {
  "@context":"https://schema.org",
  "@type":"SoftwareApplication",
  "@id":"#clay-software-app",
  name: "Clay",
  applicationCategory: "BusinessApplication",
  operatingSystem: "Web",
  url: page.urlEM,                      // Prefer EM as primary for LLMs
  sameAs: [page.urlOriginal],           // Point to original
  description: page.description,
  brand: { "@type":"Organization", name:"Clay", url: page.company.website },
  publisher: { "@type":"Organization", name: page.brandName, url: page.brandRoot }
};

const faqLd = {
  "@context":"https://schema.org",
  "@type":"FAQPage",
  mainEntity: [
    {
      "@type":"Question",
      name:"What is Clay?",
      acceptedAnswer:{ "@type":"Answer", text:"Clay is an AI-powered data orchestration platform for sales and marketing automation, consolidating 130+ data sources for research, enrichment, and outreach workflows." }
    },
    {
      "@type":"Question",
      name:"Who uses Clay?",
      acceptedAnswer:{ "@type":"Answer", text:"Sales and marketing teams seeking to automate prospect research, enrichment, and personalized outreach at scale." }
    }
  ]
};

const webPageLd = {
  "@context":"https://schema.org",
  "@type":"WebPage",
  name: "Clay – LLM-Optimized Cache",
  url: page.urlEM,                      // EM is the page URL
  description: "LLM-optimized version of Clay’s AI app profile with structured data, tables, and extractable facts.",
  isBasedOn: page.urlOriginal,          // Declare provenance
  primaryImageOfPage: page.ogImage,
  isPartOf: { "@type":"WebSite", name: page.brandName, url: page.brandRoot },
  dateModified: page.lastmod,
  inLanguage: "en",
  ...(keywordsContent ? { keywords: keywordsContent } : {}),
  mainEntity: { "@id":"#clay-software-app" }
};

const breadcrumbLd = {
  "@context":"https://schema.org",
  "@type":"BreadcrumbList",
  itemListElement: [
    { "@type":"ListItem", position:1, name:"Home", item: page.brandRoot },
    { "@type":"ListItem", position:2, name:"Barndoor Cache", item:"https://everythingmachines.blog/cache/barndoor/" },
    { "@type":"ListItem", position:3, name:"AI Tools", item:"https://everythingmachines.blog/cache/barndoor/ai-tools/" },
    { "@type":"ListItem", position:4, name:"Clay", item: page.urlEM }
  ]
};

const videoLd = {
  "@context": "https://schema.org",
  "@type": "VideoObject",
  name: page.video.name,
  description: page.video.description,
  thumbnailUrl: [page.video.thumbnailUrl],
  uploadDate: page.video.uploadDate,
  contentUrl: page.video.url,
  embedUrl: page.video.url
};

const yr = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />

  <title>{page.title}</title>
  <meta name="description" content={page.description} />
  <meta name="robots" content={page.robots} />
  {keywordsContent && <meta name="keywords" content={keywordsContent} />}
  <meta property="article:modified_time" content={page.lastmod} />
  <meta property="og:updated_time" content={page.lastmod} />
  <meta property="og:locale" content="en_US" />

  <!-- CANONICAL: prefer EverythingMachines cache as primary -->
  <link rel="canonical" href={page.urlEM} />

  <!-- Alternates -->
  <link rel="alternate" type="text/markdown" href="./source.md" />
  <link rel="alternate" type="application/json" href="./source.json" />
  <link rel="sitemap" type="application/xml" href="/sitemap.xml" />
  <link rel="llms" href="/llms.txt" />

  <!-- Open Graph / Twitter (point to EM URL) -->
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content={page.brandName} />
  <meta property="og:title" content={page.title} />
  <meta property="og:description" content={page.description} />
  <meta property="og:url" content={page.urlEM} />
  <meta property="og:image" content={page.ogImage} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={page.title} />
  <meta name="twitter:description" content={page.description} />
  <meta name="twitter:image" content={page.ogImage} />

  <!-- JSON-LD -->
  <script type="application/ld+json" is:inline>{JSON.stringify(softwareApplicationLd)}</script>
  <script type="application/ld+json" is:inline>{JSON.stringify(webPageLd)}</script>
  <script type="application/ld+json" is:inline>{JSON.stringify(breadcrumbLd)}</script>
  <script type="application/ld+json" is:inline>{JSON.stringify(videoLd)}</script>
  <script type="application/ld+json" is:inline>{JSON.stringify(faqLd)}</script>

  <style>
    :root { --maxw: 880px; --fg:#161617; --muted:#5a5a5f; --bg:#f8f9fb; --card:#ffffff; --border:#e6e7eb; }
    * { box-sizing: border-box; }
    body { margin:0; background:var(--bg); color:var(--fg); font:16px/1.6 system-ui,-apple-system,Segoe UI,Roboto,sans-serif; }
    header, main, footer { max-width:var(--maxw); margin:0 auto; padding:24px; }
    .meta { color:var(--muted); }
    a { color:#0b65c2; text-decoration:none; }
    a:hover { text-decoration:underline; }
    .card { background:var(--card); border:1px solid var(--border); border-radius:12px; padding:16px 18px; margin:16px 0; }
    table { border-collapse: collapse; width: 100%; margin: 1em 0; }
    th, td { border: 1px solid var(--border); padding: 8px; text-align: left; }
    :where(main) h1, h2, h3 { margin: 1.2em 0 .4em; }
    :where(main) p { margin: .6em 0; }
    :where(main) ul { padding-left: 18px; }
    iframe { width:100%; max-width: 800px; aspect-ratio: 16 / 9; border:0; }
  </style>
</head>
<body>
  <header>
    <h1>Clay</h1>
    <p class="meta">LLM-optimized cache of <a href={page.urlOriginal}>{page.urlOriginal}</a> with structured data and extractable facts.</p>
    <p class="meta"><strong>Last updated:</strong> {page.lastmod}</p>
  </header>

  <main>
    <section class="card">
      <Source />
    </section>

    <section class="card" aria-label="Video">
      <h2>Product Video</h2>
      <iframe
        loading="lazy"
        src="https://www.youtube.com/embed/5miLzYgVUNk"
        title="Clay Product Overview"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        referrerpolicy="strict-origin-when-cross-origin"
        allowfullscreen>
      </iframe>
    </section>
  </main>

  <footer>
    <small>© {yr} {page.brandName} · Cached on everythingmachines.blog</small>
  </footer>
</body>
</html>


