---
import Base from './Base.astro';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  note: CollectionEntry<'notes'>;
}

const { note } = Astro.props;
const { title, description, canonical, robots, image, lang, schema } = note.data;

const updatedDate = note.data.updated ? note.data.updated.toISOString().split('T')[0] : undefined;

const noteSchema = schema ? {
  ...schema,
  type: schema.type || 'Article',
  dateModified: updatedDate || schema.dateModified,
} : {
  type: 'Article',
  dateModified: updatedDate,
};
---

<Base
  title={title}
  description={description}
  canonical={canonical}
  robots={robots}
  image={image}
  lang={lang}
  schema={noteSchema}
>
  <article>
    <header>
      <h1>{title}</h1>
      {note.data.updated && (
        <p class="updated">Updated: {note.data.updated.toLocaleDateString()}</p>
      )}
    </header>
    
    <div class="content">
      <slot />
    </div>
  </article>

  <style>
    article {
      max-width: 100%;
    }

    header {
      margin-bottom: 2rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--color-border);
    }

    .updated {
      color: var(--color-text-muted);
      font-size: 14px;
      margin-top: 0.5rem;
    }

    .content {
      line-height: 1.7;
    }

    .content :global(h2) {
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    .content :global(h3) {
      margin-top: 1.5rem;
      margin-bottom: 0.8rem;
    }

    .content :global(p) {
      margin-bottom: 1.2rem;
    }

    .content :global(ul, ol) {
      margin-bottom: 1.2rem;
      padding-left: 1.5rem;
    }

    .content :global(li) {
      margin-bottom: 0.5rem;
    }

    .content :global(blockquote) {
      border-left: 4px solid var(--color-accent);
      padding-left: 1rem;
      margin: 1.5rem 0;
      font-style: italic;
      color: var(--color-text-secondary);
    }

    .content :global(code) {
      background: var(--color-surface);
      padding: 0.2rem 0.4rem;
      border-radius: 4px;
      font-size: 0.9em;
    }

    .content :global(pre) {
      background: var(--color-surface);
      padding: 1rem;
      border-radius: 8px;
      overflow-x: auto;
      margin: 1.5rem 0;
    }

    .content :global(pre code) {
      background: none;
      padding: 0;
    }
  </style>
</Base>
